<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_newpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:visibility="visible"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/post_shoe">

            <!--<TextView-->
            <!--android:id="@+id/title_newpost"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="start"-->
            <!--android:fontFamily="@font/roboto_light"-->
            <!--android:text="@string/post_shoe"-->
            <!--android:textSize="25sp">-->
            <!--</TextView>-->

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/upload_pic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/_dynamic"
        android:layout_toEndOf="@+id/newpost_titledescribe2"
        android:fontFamily="@font/roboto_light"
        android:text="Add from library"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/newpost_takepic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/upload_pic_button"
        android:layout_toStartOf="@+id/newpost_titledescribe2"
        android:fontFamily="@font/roboto_light"
        android:text="Take a photo"
        android:textAllCaps="false"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newpost_titlelayout"
        android:layout_width="320dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newpost_titleinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="Name, brand, etc..."
            android:textSize="14sp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/newpost_nextbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Next"
        android:theme="@style/PrimaryButton"/>

    <TextView
        android:id="@+id/newpost_titledescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Images"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/newpost_titledescribe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <GridView
        android:layout_width="290dp"
        android:layout_height="209dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dp"/>




</RelativeLayout>