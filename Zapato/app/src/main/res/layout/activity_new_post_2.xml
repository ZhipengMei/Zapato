<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zapato.zapato.NewPostView.NewPostActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_newpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:visibility="visible"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/post_shoe">

            <!--<TextView-->
            <!--android:id="@+id/title_newpost"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="start"-->
            <!--android:fontFamily="@font/roboto_light"-->
            <!--android:text="@string/post_shoe"-->
            <!--android:textSize="25sp">-->
            <!--</TextView>-->

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/newpost_applytags_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Apply tags  >"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newpost_titlelayout"
        android:layout_width="320dp"
        android:layout_height="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="336dp"
        tools:ignore="MissingConstraints">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newpost_titleinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name, brand, etc..."
            android:textSize="14sp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/newpost_nextbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@+id/newpost_titledescribe"
        tools:layout_editor_absoluteX="148dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/newpost_titledescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Give your listing a title!"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newpost_titlelayout"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium_italic"
        android:text="Condition"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="153dp"/>

    <SeekBar
        android:id="@+id/newpost_seekbar"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_width="211dp"
        android:layout_height="20dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="194dp"/>

    <TextView
        android:id="@+id/used_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="Mint"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="214dp"/>

    <TextView
        android:id="@+id/used_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="Good"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="214dp"/>

    <TextView
        android:id="@+id/used_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="Used"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="214dp"/>


</android.support.constraint.ConstraintLayout>
