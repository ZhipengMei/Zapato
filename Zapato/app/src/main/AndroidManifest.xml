<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zapato.zapato">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SearchView.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".NewPostView.NewPostActivity"
            android:parentActivityName=".HomeView.Home"/>

        <activity android:name=".HomeView.Home"
            android:parentActivityName=".HomeView.Home"/>

        <activity android:name=".ProductDetailView.ProductDetail"
            android:parentActivityName=".HomeView.Home"/>

        <activity android:name=".LoginView.Login"/>

    </application>

</manifest>